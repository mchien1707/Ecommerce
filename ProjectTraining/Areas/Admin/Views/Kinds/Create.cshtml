<!--main content start-->
<section id="main-content">
    <section class="wrapper" id="adminContent">
        <h3 class="title_component">THÊM MỤC SẢN PHẨM</h3>
        <form action="@Url.Action("Create", "Kinds", new { area = "Admin" })" method="post" class="form-add">
            <p>Tên mục sản phẩm</p>
            <input type="text" name="KindName" class="input_el" placeholder="Tên mục sản phẩm mới" id="nameCategory" required>
            <button type="submit" class="btn btn-primary">Thêm</button>
        </form>
    </section>
</section>